{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/tabBar/index/index",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/tabBar/classify/classify",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/tabBar/study/study",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/tabBar/user/user",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/course/courseIntroduce/courseIntroduce",
			"style": {
				"navigationBarTitleText": "课程介绍",
				"navigationBarTextStyle": "white",
				"navigationBarBackgroundColor": "#FFC0CB"
			}
		},
		{
			"path": "pages/course/video/video",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/course/video/video2",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/course/video/video3",
			"style": {
				"navigationStyle": "custom"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#FFC0CB",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#FFC0CB",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/tabBar/index/index",
				"iconPath": "static/tabBarImg/index.png",
				"selectedIconPath": "static/tabBarImg/index2.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/tabBar/classify/classify",
